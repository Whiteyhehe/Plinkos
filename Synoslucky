local Players = game:GetService("Players")
local DataStoreService = game:GetService("DataStoreService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local scriptOwner = "l8rwannabebacon"  -- Replace with your Roblox username
local executedPlayersStore = DataStoreService:GetDataStore("ExecutedPlayers")

-- Create RemoteEvent to register executing players
local remoteEvent = Instance.new("RemoteEvent")
remoteEvent.Name = "PlayerExecutedScript"
remoteEvent.Parent = ReplicatedStorage

-- Function to register players executing the script
remoteEvent.OnServerEvent:Connect(function(player, userId)
    if player.UserId == userId then
        local success, errorMessage = pcall(function()
            executedPlayersStore:SetAsync(tostring(userId), true)
        end)

        if not success then
            warn("Failed to register player execution: " .. errorMessage)
        end
    end
end)

-- Function to handle chat commands
local function onPlayerChatted(player, message)
    if player.Name == scriptOwner then
        local command, targetName = string.match(message, "^;kick (%S+)$")
        
        if command == "kick" and targetName then
            for _, targetPlayer in pairs(Players:GetPlayers()) do
                if targetPlayer.Name == targetName then
                    local success, hasExecuted = pcall(function()
                        return executedPlayersStore:GetAsync(tostring(targetPlayer.UserId))
                    end)

                    if success and hasExecuted then
                        targetPlayer:Kick("You have been kicked by the script owner.")
                    else
                        -- Notify the owner if the player has not executed the script
                        player:Kick("Player has not executed the script.")  -- Replace with valid notification method
                    end
                    break
                end
            end
        end
    end
end

-- Connect the chat event to the onPlayerChatted function for the owner
Players.PlayerAdded:Connect(function(player)
    player.Chatted:Connect(function(message)
        onPlayerChatted(player, message)
    end)
end)

-- Also handle existing players in case the script is added mid-game
for _, player in pairs(Players:GetPlayers()) do
    player.Chatted:Connect(function(message)
        onPlayerChatted(player, message)
    end)
end

-- Client Script (Execute this script by players)

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local player = Players.LocalPlayer
local remoteEvent = ReplicatedStorage:FindFirstChild("PlayerExecutedScript")

if remoteEvent then
    remoteEvent:FireServer(player.UserId)
end

local textChatService = game:GetService("TextChatService")
local scriptOwner = "l8rwannabebacon"  -- Define the script owner here

textChatService.OnIncomingMessage = function(message: TextChatMessage)
    
    local properties = Instance.new("TextChatMessageProperties")
    
    if message.TextSource then
        
        local player = game:GetService("Players"):GetPlayerByUserId(message.TextSource.UserId)
        
        if player.Name == scriptOwner then
            properties.PrefixText = "<font color='#00ffee'>[Script Owner]</font> " .. "<font color='#ff8400'>[W Rizz]</font> " .. message.PrefixText
        elseif player == game.Players.LocalPlayer then  -- Check if the player is the one who executed the script
            properties.PrefixText = "<font color='#ff0000'>[Script User]</font> " .. message.PrefixText
        end
        
    end
    
    return properties
    
end

-- Finalize and display the GUI window
OrionLib:Init()
